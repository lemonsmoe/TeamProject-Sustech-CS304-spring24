{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport Layout from '@/components/Layout.vue';\nexport default {\n  components: {\n    Layout\n  },\n  data() {\n    return {\n      isCollapse: false,\n      asideWidth: '200px',\n      collapseIcon: 'el-icon-s-fold',\n      form: {\n        category: '',\n        sort: ''\n      },\n      reviews: [],\n      currentPage: 1,\n      pageSize: 10,\n      totalReviews: 0\n    };\n  },\n  mounted() {\n    this.fetchReviews();\n  },\n  methods: {\n    handleFullScreen() {\n      document.documentElement.requestFullscreen();\n    },\n    handleCollapse() {\n      this.isCollapse = !this.isCollapse;\n      this.asideWidth = this.isCollapse ? '64px' : '200px';\n      this.collapseIcon = this.isCollapse ? 'el-icon-s-unfold' : 'el-icon-s-fold';\n    },\n    viewDetails(id) {\n      this.$router.push({\n        name: 'CourseDetail',\n        params: {\n          id\n        }\n      });\n    },\n    handleCurrentChange(page) {\n      this.currentPage = page;\n      this.fetchReviews();\n    },\n    fetchReviews() {\n      const params = {\n        category: this.form.category,\n        sort: this.form.sort,\n        page: this.currentPage,\n        pageSize: this.pageSize\n      };\n      request.get('/pingjiao/reviews', {\n        params\n      }).then(res => {\n        if (res.status === 200) {\n          this.reviews = res.data.reviews;\n          this.totalReviews = res.data.total;\n        } else {\n          this.$message.error(res.msg);\n        }\n      }).catch(error => {\n        console.error(\"获取点评信息失败:\", error);\n      });\n    }\n  }\n};","map":{"version":3,"names":["Layout","components","data","isCollapse","asideWidth","collapseIcon","form","category","sort","reviews","currentPage","pageSize","totalReviews","mounted","fetchReviews","methods","handleFullScreen","document","documentElement","requestFullscreen","handleCollapse","viewDetails","id","$router","push","name","params","handleCurrentChange