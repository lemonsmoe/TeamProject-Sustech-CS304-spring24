{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport Layout from '@/components/Layout.vue';\nimport request from \"@/utils/request\"; // 确保你已经导入了request工具\n\nexport default {\n  name: 'TopicDetail',\n  components: {\n    Layout\n  },\n  data() {\n    return {\n      topic: {\n        title: '',\n        content: '',\n        board: '',\n        topic: '',\n        created_time: '',\n        last_updated_time: '',\n        author: ''\n      },\n      comments: [],\n      newComment: ''\n    };\n  },\n  mounted() {\n    this.fetchTopicDetail();\n  },\n  methods: {\n    fetchTopicDetail() {\n      const topicId = this.$route.params.id; // 获取路由参数中的话题ID\n      request.post('/forum/post/getcontent', {\n        post_id: topicId\n      }).then(res => {\n        if (res.status === 200) {\n          this.topic = res.data; // 将获取到的话题详情设置到topic\n        } else {\n          this.$message.error(res.data.msg);\n        }\n      }).catch(error => {\n        console.error(\"获取话题详情失败:\", error);\n      });\n    },\n    postComment() {\n      if (this.newComment.trim() !== '') {\n        const newId = this.comments.length + 1;\n        this.comments.push({\n          id: newId,\n          userName: '新用户',\n          userAvatar: 'path/to/defaultAvatar.jpg',\n          text: this.newComment\n        });\n        this.newComment = ''; // Reset the input after posting\n        alert('评论已发表！');\n      } else {\n        alert('请输入评论内容！');\n      }\n    },\n    goBack() {\n      this.$router.go(-1); // 返回前一个页面\n    }\n  }\n};","map":{"version":3,"names":["Layout","request","name","components","data","topic","title","content","board","created_time","last_updated_time","author","comments","newComment","mounted","fetchTopicDetail","methods","topicId","$route","params","id","post","post_id","then","res","status","$message","error","msg","catch","console","postComment","trim","newId","length","push","userName","userAvatar","text","alert","goBack","$router","go"],"sources":["src/views/LunTan/TopicDetail.vue"],"sourcesContent":["<template>\r\n  <Layout>\r\n    <el-main>\r\n      <el-card style=\"margin-bottom: 10px\">\r\n        <div slot=\"header\" class=\"clearfix\">\r\n          <div class=\"back_button\">\r\n            <el-button type=\"text\" @click=\"goBack\">返回</el-button>\r\n          </div>\r\n          <span>学习论坛</span>\r\n        </div>\r\n\r\n        <!-- 标题和正文部分 -->\r\n        <el-card class=\"topic-detail-card\">\r\n          <h1 class=\"topic-title\">{{ topic.title }}</h1>\r\n          <div class=\"topic-meta\">\r\n            <span class=\"topic-board\">{{ topic.board }}</span> | \r\n            <span class=\"topic-topic\">{{ topic.topic }}</span> | \r\n            <span class=\"topic-author\">作者: {{ topic.author }}</span> | \r\n            <span class=\"topic-time\">发表于: {{ topic.created_time }}</span> | \r\n            <span class=\"topic-updated\">最后更新: {{ topic.last_updated_time }}</span>\r\n          </div>\r\n          <div class=\"topic-content\">{{ topic.content }}</div>\r\n        </el-card>\r\n\r\n        <!-- 评论区 -->\r\n        <div class=\"forum-container\">\r\n          <div class=\"comments-section\">\r\n            <el-card v-for=\"comment in comments\" :key=\"comment.id\" class=\"comment-card\">\r\n              <div class=\"comment-header\">\r\n                <img :src=\"comment.userAvatar\" alt=\"User Avatar\" class=\"user-avatar\">\r\n                <span>{{ comment.userName }}</span>\r\n              </div>\r\n              <div class=\"comment-body\">{{ comment.text }}</div>\r\n              <div class=\"comment-footer\">\r\n                <el-button size=\"mini\">评论</el-button>\r\n                <el-button size=\"mini\">回复</el-button>\r\n              </div>\r\n            </el-card>\r\n          </div>\r\n          <el-pagination\r\n            background\r\n            layout=\"prev, pager, next\"\r\n            :total=\"comments.length\"\r\n            :page-size=\"10\">\r\n          </el-pagination>\r\n          <el-input\r\n            type=\"textarea\"\r\n            placeholder=\"发表您的评论...\"\r\n            v-model=\"newComment\"\r\n            class=\"quick-reply\">\r\n          </el-input>\r\n          <el-button type=\"primary\" @click=\"postComment\">发表评论</el-button>\r\n        </div>\r\n      </el-card>\r\n    </el-main>\r\n  </Layout>\r\n</template>\r\n\r\n<script>\r\nimport Layout from '@/components/Layout.vue'\r\nimport request from \"@/utils/request\"; // 确保你已经导入了request工具\r\n\r\nexport default {\r\n  name: 'TopicDetail',\r\n  components: {\r\n    Layout\r\n  },\r\n  data() {\r\n    return {\r\n      topic: {\r\n        title: '',\r\n        content: '',\r\n        board: '',\r\n        topic: '',\r\n        created_time: '',\r\n        last_updated_time: '',\r\n        author: ''\r\n      },\r\n      comments: [],\r\n      newComment: ''\r\n    };\r\n  },\r\n  mounted() {\r\n    this.fetchTopicDetail();\r\n  },\r\n  methods: {\r\n    fetchTopicDetail() {\r\n      const topicId = this.$route.params.id; // 获取路由参数中的话题ID\r\n      request.post('/forum/post/getcontent', { post_id: topicId }).then(res => {\r\n        if (res.status === 200) {\r\n          this.topic = res.data; // 将获取到的话题详情设置到topic\r\n        } else {\r\n          this.$message.error(res.data.msg);\r\n        }\r\n      }).catch(error => {\r\n        console.error(\"获取话题详情失败:\", error);\r\n      });\r\n    },\r\n    postComment() {\r\n      if (this.newComment.trim() !== '') {\r\n        const newId = this.comments.length + 1;\r\n        this.comments.push({\r\n          id: newId,\r\n          userName: '新用户',\r\n          userAvatar: 'path/to/defaultAvatar.jpg',\r\n          text: this.newComment\r\n        });\r\n        this.newComment = ''; // Reset the input after posting\r\n        alert('评论已发表！');\r\n      } else {\r\n        alert('请输入评论内容！');\r\n      }\r\n    },\r\n    goBack() {\r\n      this.$router.go(-1);  // 返回前一个页面\r\n    }\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.back_button {\r\n  display: flex;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n  margin-bottom: 20px;\r\n}\r\n.topic-detail-card {\r\n  margin-bottom: 20px;\r\n  padding: 20px;\r\n}\r\n.topic-title {\r\n  font-size: 24px;\r\n  font-weight: bold;\r\n  margin-bottom: 10px;\r\n}\r\n.topic-meta {\r\n  font-size: 14px;\r\n  color: #888;\r\n  margin-bottom: 20px;\r\n}\r\n.topic-content {\r\n  font-size: 16px;\r\n  line-height: 1.5;\r\n}\r\n.forum-container {\r\n  width: 80%;\r\n  margin: auto;\r\n}\r\n.comment-card {\r\n  margin-top: 20px;\r\n}\r\n.comment-header {\r\n  display: flex;\r\n  align-items: center;\r\n}\r\n.user-avatar {\r\n  width: 40px;\r\n  height: 40px;\r\n  border-radius: 50%;\r\n  margin-right: 10px;\r\n}\r\n.comment-body {\r\n  margin-top: 10px;\r\n}\r\n.comment-footer {\r\n  display: flex;\r\n  justify-content: flex-end;\r\n  margin-top: 10px;\r\n}\r\n.quick-reply {\r\n  margin-top: 20px;\r\n}\r\n</style>\r\n"],"mappings":";AA2DA,OAAAA,MAAA;AACA,OAAAC,OAAA;;AAEA;EACAC,IAAA;EACAC,UAAA;IACAH;EACA;EACAI,KAAA;IACA;MACAC,KAAA;QACAC,KAAA;QACAC,OAAA;QACAC,KAAA;QACAH,KAAA;QACAI,YAAA;QACAC,iBAAA;QACAC,MAAA;MACA;MACAC,QAAA;MACAC,UAAA;IACA;EACA;EACAC,QAAA;IACA,KAAAC,gBAAA;EACA;EACAC,OAAA;IACAD,iBAAA;MACA,MAAAE,OAAA,QAAAC,MAAA,CAAAC,MAAA,CAAAC,EAAA;MACAnB,OAAA,CAAAoB,IAAA;QAAAC,OAAA,EAAAL;MAAA,GAAAM,IAAA,CAAAC,GAAA;QACA,IAAAA,GAAA,CAAAC,MAAA;UACA,KAAApB,KAAA,GAAAmB,GAAA,CAAApB,IAAA;QACA;UACA,KAAAsB,QAAA,CAAAC,KAAA,CAAAH,GAAA,CAAApB,IAAA,CAAAwB,GAAA;QACA;MACA,GAAAC,KAAA,CAAAF,KAAA;QACAG,OAAA,CAAAH,KAAA,cAAAA,KAAA;MACA;IACA;IACAI,YAAA;MACA,SAAAlB,UAAA,CAAAmB,IAAA;QACA,MAAAC,KAAA,QAAArB,QAAA,CAAAsB,MAAA;QACA,KAAAtB,QAAA,CAAAuB,IAAA;UACAf,EAAA,EAAAa,KAAA;UACAG,QAAA;UACAC,UAAA;UACAC,IAAA,OAAAzB;QACA;QACA,KAAAA,UAAA;QACA0B,KAAA;MACA;QACAA,KAAA;MACA;IACA;IACAC,OAAA;MACA,KAAAC,OAAA,CAAAC,EAAA;IACA;EACA;AACA","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}