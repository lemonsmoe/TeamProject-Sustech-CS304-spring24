{"ast":null,"code":"import Layout from '@/components/Layout.vue';\nimport request from \"@/utils/request\"; // 确保你已经导入了request工具\n\nexport default {\n  name: 'TopicDetail',\n  components: {\n    Layout\n  },\n  data() {\n    return {\n      topic: {\n        title: '',\n        content: '',\n        board: '',\n        topic: '',\n        created_time: '',\n        last_updated_time: '',\n        author: ''\n      },\n      comments: [],\n      newComment: {\n        post_id: this.$route.params.id,\n        content: ''\n      }\n    };\n  },\n  mounted() {\n    this.fetchTopicDetail();\n    this.fetchComments(); // 页面加载时获取评论信息\n  },\n  created() {\n    // 在组件创建后立即给当前帖子发送增加浏览量的请求 Thomas添加嘻嘻嘻\n    this.addView();\n  },\n  methods: {\n    addView() {\n      const topicId = this.$route.params.id;\n      request.post('/forum/post/addview', {\n        post_id: topicId\n      }).then(res => {\n        if (res.status !== 200) {\n          this.$message.error(res.data.msg);\n        }\n      }).catch(error => {\n        console.error(\"增加浏览量失败:\", error);\n      });\n    },\n    fetchTopicDetail() {\n      const topicId = this.$route.params.id; // 获取路由参数中的话题ID\n      request.post('/forum/post/getcontent', {\n        post_id: topicId\n      }).then(res => {\n        if (res.status === 200) {\n          this.topic = res.data; // 将获取到的话题详情设置到topic\n        } else {\n          this.$message.error(res.data.msg);\n        }\n      }).catch(error => {\n        console.error(\"获取话题详情失败:\", error);\n      });\n    },\n    fetchComments() {\n      const topicId = this.$route.params.id;\n      request.post('/forum/reply/get', {\n        post_id: topicId\n      }).then(res => {\n        if (res.status === 200) {\n          this.comments = res.data;\n        } else {\n          this.$message.error(res.data.msg);\n        }\n      }).catch(error => {\n        console.error(\"获取评论列表失败:\", error);\n      });\n    },\n    postComment() {\n      if (this.newComment.content.trim() !== '') {\n        request.post('/forum/reply/put', this.newComment).then(res => {\n          if (res.status === 200) {\n            this.$message.success('评论已发表');\n            // 重置评论输入框\n            this.newComment.content = '';\n            // 重新获取评论列表\n            this.fetchComments();\n          } else {\n            this.$message.error(res.data.msg);\n          }\n        }).catch(error => {\n          console.error(\"发表评论失败:\", error);\n        });\n      } else {\n        this.$message.error('请输入评论内容');\n      }\n    },\n    goBack() {\n      this.$router.go(-1);\n    }\n  }\n};","map":{"version":3,"names":["Layout","request","name","components","data","topic","title","content","board","created_time","last_updated_time","author","comments","newComment","post_id","$route","params","id","mounted","fetchTopicDetail","fetchComments","created","addView","methods","topicId","post","then","res","status","$message","error","msg","catch","console","postComment","trim","success","goBack","$router","go"],"sources":["src/views/LunTan/TopicDetail.vue"],"sourcesContent":["<template>\r\n  <Layout>\r\n    <el-main>\r\n      <el-card style=\"margin-bottom: 10px\">\r\n        <!-- <div slot=\"header\" class=\"clearfix\"> -->\r\n          <div class=\"back_button\">\r\n            <el-button type=\"text\" @click=\"goBack\">返回</el-button>\r\n          </div>\r\n          <!-- <span>学习论坛</span> -->\r\n        <!-- </div> -->\r\n\r\n        <!-- 标题和正文部分 -->\r\n        <el-card class=\"topic-detail-card\">\r\n          <h1 class=\"topic-title\">{{ topic.title }}</h1>\r\n          <div class=\"topic-meta\">\r\n            <span class=\"topic-board\">{{ topic.board }}</span> | \r\n            <span class=\"topic-topic\">{{ topic.topic }}</span> | \r\n            <span class=\"topic-author\">作者: {{ topic.author }}</span> | \r\n            <span class=\"topic-time\">发表于: {{ topic.created_time }}</span> | \r\n            <span class=\"topic-updated\">最后更新: {{ topic.last_updated_time }}</span>\r\n          </div>\r\n          <div class=\"topic-content\">{{ topic.content }}</div>\r\n        </el-card>\r\n\r\n        <!-- 评论区 -->\r\n        <div class=\"forum-container\">\r\n          <div class=\"comments-section\">\r\n            <el-card v-for=\"comment in comments\" :key=\"comment.id\" class=\"comment-card\">\r\n              <!-- <div class=\"comment-header\">\r\n                <img :src=\"comment.userAvatar\" alt=\"User Avatar\" class=\"user-avatar\">\r\n                <div class=\"comment-head\">{{ comment.student_id }}</div>\r\n              </div>\r\n              <div class=\"comment-body\">{{ comment.content }}</div>\r\n              <div class=\"comment-footer\">\r\n                <el-button size=\"mini\">评论</el-button>\r\n                <el-button size=\"mini\">回复</el-button>\r\n              </div> -->\r\n\r\n              <div class=\"comment-container\">\r\n              <div class=\"comment-content\">\r\n                <div class=\"comment-head\">{{ comment.student_id }}</div>\r\n                <div class=\"comment-body\">{{ comment.content }}</div>\r\n              </div>\r\n              <div class=\"comment-date\">{{ comment.created_time }}</div>\r\n            </div>\r\n            </el-card>\r\n          </div>\r\n          \r\n          <el-pagination\r\n            background\r\n            layout=\"prev, pager, next\"\r\n            :total=\"comments.length\"\r\n            :page-size=\"10\"\r\n            class=\"pagination-with-margin\">\r\n          </el-pagination>\r\n          <el-input\r\n            type=\"textarea\"\r\n            placeholder=\"发表您的评论...按下Ctrl+Enter快速发表\"\r\n            v-model=\"newComment.content\"\r\n            class=\"quick-reply\"\r\n            @keydown.enter.ctrl.native=\"postComment\">\r\n          </el-input>\r\n          <el-button type=\"primary\" class=\"quick-reply\" @click=\"postComment\">发表评论</el-button>\r\n        </div>\r\n      </el-card>\r\n    </el-main>\r\n  </Layout>\r\n</template>